# 应用配置环境变量示例
# 复制此文件为 .env.local 并根据需要修改

# =============================================
# WebSocket 配置
# =============================================
# WebSocket 服务器主机
VITE_WS_HOST=localhost
# WebSocket 服务器端口
VITE_WS_PORT=20914
# 是否启用心跳
VITE_WS_ENABLE_HEARTBEAT=true
# 心跳间隔（毫秒）
VITE_WS_HEARTBEAT_INTERVAL=10000
# 重连间隔（毫秒）
VITE_WS_RECONNECT_INTERVAL=5000
# 最大重连尝试次数
VITE_WS_MAX_RECONNECT_ATTEMPTS=5
# 是否启用自动重连
VITE_WS_ENABLE_AUTO_RECONNECT=true

# =============================================
# API 配置
# =============================================
# API 服务器主机
VITE_API_HOST=localhost
# API 服务器端口
VITE_API_PORT=20914
# API 请求超时时间（毫秒）
VITE_API_TIMEOUT=10000
# API 最大重试次数
VITE_API_MAX_RETRIES=3
# API 重试延迟（毫秒）
VITE_API_RETRY_DELAY=1000
# API 调试模式
VITE_API_DEBUG=false

# =============================================
# 其他配置
# =============================================
# 应用调试模式
VITE_DEBUG=false
